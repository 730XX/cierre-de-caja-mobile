<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingVertical="12dp"
    android:paddingHorizontal="7dp"
    android:layout_marginHorizontal="8dp"
    android:background="@drawable/border_bottom">

    <LinearLayout
        android:id="@+id/col1Container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvCol1Line1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00/00/0000"
            style="@style/cardItemLabel"/>

        <TextView
            android:id="@+id/tvCol1Line2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="04:05 P.M."
            style="@style/cardItemLabel"
            android:visibility="gone"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tvCol2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        style="@style/cardItemLabel"/>

    <TextView
        android:id="@+id/tvCol3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        style="@style/cardItemLabel"/>

    <TextView
        android:id="@+id/tvCol4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:gravity="center_horizontal"
        style="@style/cardItemLabel"/>

    <TextView
        android:id="@+id/tvCol5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:gravity="end"
        style="@style/cardItemValue"/>

</LinearLayout>
