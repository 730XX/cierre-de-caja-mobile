<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingVertical="8dp">

    <!-- Punto de color -->
    <View
        android:id="@+id/viewColorDot"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:background="@drawable/circle_dot"/>

    <!-- Nombre de categorÃ­a -->
    <TextView
        android:id="@+id/tvCategoriaNombre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/roboto"
        android:textColor="@color/text_65"
        android:textSize="12sp"
        android:maxLines="1"
        android:ellipsize="end"/>


    <!-- Monto -->
    <TextView
        android:id="@+id/tvCategoriaMonto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/text_85"
        android:textSize="12sp"/>

</LinearLayout>
