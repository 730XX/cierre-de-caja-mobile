<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@drawable/border_bottom"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/tv_tipo_doc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Boleta"
        android:textColor="@color/text_45"
        android:fontFamily="@font/roboto"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/tv_serie_numero"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="B0044-00000038"
        android:textColor="@color/text_45"
        android:fontFamily="@font/roboto"
        android:gravity="center_horizontal"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/tv_propina"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="S/333.33"
        android:textColor="@color/text_45"
        android:fontFamily="@font/roboto"
        android:gravity="center_horizontal"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/tv_comision"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="S/0.00"
        android:textColor="@color/text_45"
        android:fontFamily="@font/roboto"
        android:layout_weight="1"
        android:gravity="center_horizontal"/>

    <TextView
        android:id="@+id/tv_total_propina"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="S/333.33"
        android:textColor="@color/text_45"
        android:fontFamily="@font/roboto"
        android:gravity="center_horizontal"
        android:layout_weight="1"/>

</LinearLayout>
