<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/container_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:background="@drawable/border_bottom">

        <ImageView
            android:id="@+id/iv_icono_header"
            android:layout_width="24dp"
            android:layout_height="22dp"
            android:src="@drawable/icon_svg_cash_register"
            app:tint="@color/info"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_titulo_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/arqueo_caja"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/text_85"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/btn_close_header"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="top"
            android:paddingStart="15dp"
            android:src="@drawable/icon_svg_xmark"
            app:tint="@color/info"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/> </LinearLayout>
</merge>